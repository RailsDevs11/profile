<% content_for :header do %>
  <h1>Dashboard</h1>
     <div class='row'>
      <div class="span4"></div>
      
    </div>
<% end %>

<% content_for :breadcrumb do %>
  <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a>
  <a href="#" class="current">Dashboard</a>
<% end %>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span6">
      <div class="widget-box">
        <div class="widget-title">
          <span class="icon"><i class="icon-file"></i></span>
          <h5>Recent Books</h5>
          <span title="54 total posts" class="label label-info tip-left">10<%#= post_count %></span>
        </div>
        <div class="widget-content nopadding">
          <ul class="recent-posts">
            <%#= render :partial => 'recent_post', :collection => @recent_posts %>
            <li class="viewall">
              <a href="<%#= user_posts_path %>" class="tip-top" data-original-title="View all posts"> + View all + </a>
            </li>
          </ul>
        </div>
    </div>
  </div>
  <div class="span6">
    <div class="widget-box">
      <div class="widget-title">
        <span class="icon"><i class="icon-comment"></i></span>
        <h5>Recent Posts</h5>
        <span title="88 total comments" class="label label-info tip-left">10<%#= comment_count %></span>
      </div>
      <div class="widget-content nopadding">
        <ul class="recent-posts">
          <%#= render :partial => 'recent_comment', :collection => @recent_comments %>
          <li class="viewall">
            <a href="#" class="tip-top" data-original-title="View all posts"> + View all + </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div id="footer" class="span12">
    @2013 &copy; Blog-Comments
  </div>
</div>
